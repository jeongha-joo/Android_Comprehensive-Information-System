<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/employer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="삼성"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:drawableStart="@drawable/ic_baseline_location_city_24"
        android:drawableLeft="@drawable/ic_baseline_location_city_24"
        android:drawablePadding="10dp"
        android:background="@color/colorList"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorList">

        <TextView
            android:id="@+id/employmentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="소프트웨어 개발"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:drawableStart="@drawable/ic_baseline_computer_24"
            android:drawableLeft="@drawable/ic_baseline_computer_24"
            android:drawablePadding="10dp"
            android:background="@color/colorList"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorList"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employmentDateCreated"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="작성일"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>

        <TextView
            android:id="@+id/employmentDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2020-09-05"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>

        <Button
            android:id="@+id/webViewButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:text="상세보기"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>